{
  "name": "@jser-tang/react-mvc",
  "version": "1.0.7",
  "description": "A powerful tool for simplifying React state and behavior management.",
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "npx webpack serve --node-env=development --progress --config ./webpack.config.js",
    "build:watch": "npx webpack --watch --node-env=production --progress --config ./webpack.config.js",
    "build": "npx webpack --node-env=production --progress --config ./webpack.config.js && tsc --emitDeclarationOnly && npm link",
    "pub": "npm run build && npm publish --access public"
  },
