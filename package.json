    "css-loader": "^6.8.1",
    "hoist-non-react-statics": "3.3.2",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "react-refresh": "^0.14.0",
    "sass": "1.66.1",
    "sass-loader": "13.3.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
